@model LoginViewModel
<h1>Login</h1>
<hr />
<form asp-controller="Registration" asp-action="Login">
<div asp-validation-summary="All" class="text-danger"></div>
    @*<input type="hidden" name="ReturnUrl" value="ViewBag.Url" />*@

<div class="form-group">
    <label asp-for="Username" class="controlcol-form-label"></label>
    <input asp-for="Username" class="form-control" />
    <span asp-validation-for="Username" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Password" class="controlcol-form-label"></label>
    <input asp-for="Password" class="form-control" />
    <span asp-validation-for="Username" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Ispersisite" class="controlcol-form-label"></label>
    <input asp-for="Ispersisite" />
</div>
<input name="Login"  type="submit" class="btn btn-secondary"  />
<a asp-action="Register" class="btn btn-dark">Register</a>
</form>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
