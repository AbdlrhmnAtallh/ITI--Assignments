<h2 style="font-family:Arial, Helvetica, sans-serif;color:cadetblue;font-weight:800">Html Helper</h2>
<br />

@using(Html.BeginForm("SaveNewPlayer","Home"))
{

    @Html.LabelFor(e=>e.Id , new{@class="control-label"})
    @Html.EditorFor(e =>e.Id, new{@class="form-control"})
    <br />

    @Html.LabelFor(e=>e.Name,new{style="color:red", @class="control-label"})
    @Html.EditorFor(e =>e.Name, new{style="color:red", @class="form-control"})
    <br />
    
    @Html.LabelFor(e=>e.FC)
    @Html.DropDownListFor(e=>e.FC,FCList,"Select-List",new{@class="form-control"})
   
    <button type="submit" class="btn btn-secondary">Save</button>
}
