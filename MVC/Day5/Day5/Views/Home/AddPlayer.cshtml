<br />

<form asp-action="SaveNewPlayer">

    <label asp-for="Id" class="control-label"></label>
    <input asp-for="Id" class="form-control" />

    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />

    <label asp-for="FC"></label>
    <select asp-for="FC" asp-items="FCList" class="form-control">
        <option disabled selected hidden>Select-FC</option>
    </select>

