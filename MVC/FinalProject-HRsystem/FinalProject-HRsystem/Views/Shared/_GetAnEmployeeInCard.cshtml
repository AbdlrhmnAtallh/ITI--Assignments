@model Employee
@{
    int age = DateTime.Now.Year - Model.Birthdate.Year;
}
<div class="card" style="width: 18rem;">
    <img class="card-img-top" src="..." alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.City, @Model.Country<br /> @age Years old </p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">@Model.Title</li>
        <li class="list-group-item">@Model.GrossSalary</li>
        <li class="list-group-item">@Model.NetSalary</li>
    </ul>
    <div class="card-body">
        <a asp-controller="Employee" asp-action="Update" asp-route-Id="@Model.Id">Update</a><br />
        <a href="#" class="card-link">Show Employee</a>
    </div>
</div>
