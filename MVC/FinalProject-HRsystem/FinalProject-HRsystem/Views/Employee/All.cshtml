
@model List<Employee>

<title>All Employees</title>


    <div >
        <h2>All Employees</h2>
    </div>

    <div>
        <h4> You Can  </h4>
    @{
        string[] allnames = new[] {"n1", "n2", "n3"};
        string[] custom = new string[2];

    }
    <form >
        <select asp-for="@custom">
            @foreach (var item in allnames)
            {
                <option >@item</option>
            }
        </select>
        <input type="submit" />
    </form>
     
    @foreach(var i in custom)
    {
        <p>@i</p>
    }
</div>
    <div >
        <span>These buttons aren't working ></span>
        <button class="danger" title="Delete Selected">
            <svg viewBox="0 0 448 512" width="16" title="trash-alt">
                <path d="M32 464a48 48 0 0 0 48 48h288a48 48 0 0 0 48-48V128H32zm272-256a16 16 0 0 1 32 0v224a16 16 0 0 1-32 0zm-96 0a16 16 0 0 1 32 0v224a16 16 0 0 1-32 0zm-96 0a16 16 0 0 1 32 0v224a16 16 0 0 1-32 0zM432 32H312l-9.4-18.7A24 24 0 0 0 281.1 0H166.8a23.72 23.72 0 0 0-21.4 13.3L136 32H16A16 16 0 0 0 0 48v32a16 16 0 0 0 16 16h416a16 16 0 0 0 16-16V48a16 16 0 0 0-16-16z"></path>
            </svg>
        </button>
        <button class="primary" title="Add New Data">
            <svg viewBox="0 0 512 512" width="16" title="plus-circle">
                <path d="M256 8C119 8 8 119 8 256s111 248 248 248 248-111 248-248S393 8 256 8zm144 276c0 6.6-5.4 12-12 12h-92v92c0 6.6-5.4 12-12 12h-56c-6.6 0-12-5.4-12-12v-92h-92c-6.6 0-12-5.4-12-12v-56c0-6.6 5.4-12 12-12h92v-92c0-6.6 5.4-12 12-12h56c6.6 0 12 5.4 12 12v92h92c6.6 0 12 5.4 12 12v56z"></path>
            </svg>
        </button>
    </div>
<div>
    <div >
        
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>No</th>
                    <th>Name</th>
                    <th>Job Title</th>
                    <th>Department</th>
                    <th>Tasks</th>
                    <th>Age</th>
                    <th>Years OF Experince</th>
                    <th>Country, City</th>
                    <th>Gender</th>
                    <th><a asp-action="Sort">Gross Salary</a></th>
                    <th>Net Salary</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    string[] arr = { "success", "danger", "info", "warning", "active" };
                    int counter = -1;
                }
                @foreach (var item in Model)
                {
                    if(counter ==4){ counter = -1; }
                    counter++;
                    <tr style="background-color: @arr[counter]" >
                        <td>
                            <input type="checkbox" />
                        </td>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Title</td>
                        <td>@item.DepartmentId</td>
                        <td>@item.TaskId</td>
                        <td>@item.Birthdate.ToString("dd/MM/yyyy")</td>
                        <td>@item.YearsOfExperince</td>
                        <td>@item.Country, @item.City</td>
                        <td>@item.Gender</td>
                        <td>@item.GrossSalary</td>
                        <td>@item.NetSalary</td>
                        <td><a asp-action="Update" asp-route-id="@item.Id">Edit</a></td>
                        <td><a asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
            
 </div>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>