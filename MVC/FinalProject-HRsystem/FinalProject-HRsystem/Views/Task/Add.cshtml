@model ProjectTask
<link rel="stylesheet" href="~/css/AddForm.css">
<form  asp-action="Add">
    <div class="field">
        <label asp-for="Id"></label>
        <input asp-for="Id" placeholder="unique Value"/>
        <span asp-validation-for="Id"></span>
    </div>

    <div class="field">
        <label asp-for="Name"></label>
        <input asp-for="Name" placeholder="Task Name"/>
        <span asp-validation-for="Name" style="color:red"></span>
    </div>
    
    <div class="field">
        <label asp-for="Description"></label>
        <input asp-for="Description" placeholder="Enter description (max 500 characters)" />
        <span asp-validation-for="Description" style="color:red"></span>
    </div>
</form>