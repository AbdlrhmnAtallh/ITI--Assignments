@model List<Department>

<h4>All Departments</h4>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Department Leader</th>
            <th>Employees</th>
            <th></th><th></th>
        </tr>
    </thead>
    
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.DepartmentHeadId</td>
                <td>
                    @{
                        if (item.Employees == null)
                        {
                            <text>No Employees</text>
                        }
                        else
                            foreach (var employee in item.Employees)
                            {
                                foreach (var e in ViewBag.Employees)
                                {
                                    if (e.Id == employee)
                                    {
                                        <text>@string.Join(", ",e.Name)</text>
                                    }
                                }
                            }
                    }
                </td>
                <td><a asp-action="Update">Edit</a></td>
                <td><a asp-action="Remove">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
  